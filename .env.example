# AI Agent Skills Marketplace - Environment Configuration
# Copy this file to .env and fill in the values.

# --- Environment ---
# development | production
ENV="development"

# --- Database ---
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/skills_marketplace"

# --- Admin Authentication ---
# Recommended to change in production
ADMIN_USERNAME="admin"
# bcrypt hash of the password. You can generate one using the 'bcrypt' python package.
ADMIN_PASSWORD_HASH="$2b$12$hLswkuEVcK3pHzkOacog1er9oqZkB.8pJhCKyCf9Ru03K6FqpwEPi"
# Minimum 32 characters random string
JWT_SECRET_KEY="your-secret-key-change-me"
JWT_ALGORITHM="HS256"
# 관리자 세션 보안을 위해 240(4시간) 추천
JWT_EXPIRE_MINUTES=240

# --- GitHub Integration (Optional but recommended for auto-ingestion) ---
# Personal Access Token with 'repo' scope
GITHUB_TOKEN=""
GITHUB_API_BASE="https://api.github.com"

# --- GLM / AI Services (Optional: for auto-summarization and security scanning) ---
GLM_API_KEY=""
GLM_BASE_URL="https://api.openai.com/v1"
GLM_MODEL="glm-4"
GLM_TEMPERATURE=0.2

# --- Security Scanning ---
# Enable/Disable automatic security scanning of SKILL.md contents
SECURITY_SCAN_ENABLED=true
SECURITY_SCAN_ENFORCE=true

# --- CORS Settings ---
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# --- Logging ---
# DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL="INFO"

# --- Redis L2 Cache (Optional) ---
# For local Docker compose: redis://redis:6379/0
REDIS_URL=""
REDIS_CACHE_ENABLED=true
REDIS_CACHE_PREFIX="skills-marketplace"
REDIS_CACHE_TIMEOUT_MS=150
