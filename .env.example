# Database
# For local dev with docker-compose db (host port 5433). If you run Postgres locally, use 5432.
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5433/skills_marketplace"

# Admin Auth
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH=""  # bcrypt hash. If you use docker-compose, escape '$' as '$$' in .env (the app normalizes back to '$').
JWT_SECRET_KEY="change-this-in-production-to-a-random-string"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=1440

# GitHub (required for github_search source, recommended overall)
GITHUB_TOKEN=""
GITHUB_API_BASE="https://api.github.com"

# GLM (optional: overview summary generation)
GLM_API_KEY=""
# You can pass either:
# - GLM_API_BASE as a base (we'll call `${GLM_API_BASE}/chat/completions`), OR
# - GLM_CHAT_COMPLETIONS_URL as the full endpoint URL.
GLM_API_BASE=""
GLM_CHAT_COMPLETIONS_URL=""
GLM_MODEL="glm-4"
GLM_TIMEOUT_SECONDS=30

# CORS
CORS_ORIGINS="http://localhost:3004,http://127.0.0.1:3004,http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001"

# Logging
LOG_LEVEL="INFO"
